<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tabla de Ventas por Año</title>
</head>

<body>
  <table>
    <style>
      table {
        border-collapse: collapse;
        width: 100%;
      }

      th, td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
      }

      th {
        background-color: #f2f2f2;
      }
    </style>
    <tr>
      <th>Id</th>
      <th>Libro</th>
      <th>Año</th>
      <th>Ventas</th>
      <th>Acciones</th>
    </tr>
    <% sales.forEach(sale => { %>
      <tr>
        <td><%= sale.id %></td>
        <td><%= sale.book %></td>
        <td><%= sale.year %></td>
        <td><%= sale.sales %></td>
        <td>
          <form method="post" action="/salesbyyear/<%= sale.id %>">
            <input type="text" name="book" value="<%= sale.book %>">
            <input type="date" name="year" value="<%= sale.year %>">
            <input type="number" name="sales" value="<%= sale.sales %>">
            <button type="submit">Actualizar</button>
          </form>
          <form method="post" action="/salesbyyear/<%= sale.id %>/delete">
            <button type="submit">Eliminar</button>
          </form>
        </td>
      </tr>
    <% }); %>
  </table>
  <form method="post" action="/salesbyyear">
    <input type="text" name="book" placeholder="Libro">
    <input type="date" name="year" placeholder="Año">
    <input type="number" name="sales" placeholder="Ventas">
    <button type="submit">Agregar</button>
  </form>
</body>

</html>
