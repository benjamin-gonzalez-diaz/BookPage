<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tabla de Autores</title>
</head>

<body>
  <table>
    <style>
      table {
        border-collapse: collapse;
        width: 100%;
      }
      th, td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
      }
      th {
        background-color: #f2f2f2;
      }
    </style>
    <tr>
      <th>Nombre</th>
      <th>Dia de Nacimiento</th>
      <th>Pais de Origen</th>
      <th>Descripción breve del autor</th>
      <th>Acciones</th>
    </tr>
    <% Authors.forEach(user => { %>
      <tr>
        <td><%= user.nombre %></td>
        <td><%= user.dateofbirth %></td>
        <td><%= user.country %></td>
        <td><%= user.shortdescription %></td>
        <td>
          <form method="post" action="/authors/<%= user.id %>">
            <input type="text" name="nombre" value="<%= user.nombre %>">
            <input type="text" name="dateOfBirth" value="<%= user.dateofbirth %>">
            <input type="text" name="country" value="<%= user.country %>">
            <textarea name="shortDescription"><%= user.shortdescription %></textarea>
            <button type="submit">Actualizar</button>
          </form>
          <form method="post" action="/authors/<%= user.id %>/delete">
            <button type="submit">Eliminar</button>
          </form>
        </td>
      </tr>
    <% }); %>
  </table>
  <form method="post" action="/authors">
    <input type="text" name="nombre" placeholder="Nombre">
    <input type="text" name="dateOfBirth" placeholder="Dia de Nacimiento">
    <input type="text" name="country" placeholder="Pais de Origen">
    <textarea name="shortDescription" placeholder="Descripción breve del autor" rows="4"></textarea>
    <button type="submit">Agregar</button>
  </form>
  
</body>

</html>
