html
  head
    title Tabla de Libros
    script(src="/script.js")

  body
    input(type="text" placeholder="Buscar por resumen")
    button(type="button" onclick='searchSummary()') Buscar
    table 
      style.
        table {
          border-collapse: collapse;
          width: 100%;
        }
        th, td {
          border: 1px solid black;
          padding: 8px;
          text-align: left;
        }
        th {
          background-color: #f2f2f2;
        }

      tr
        th Id
        th Nombre
        th date of publication
        th number of sales
        th summary
        th Acciones
      each user in Authors
        tr
          td= user.id
          td= user.nombre
          td= user.dateofpublication
          td= user.numberofsales
          td= user.summary
          td
            button(type="button" onclick='updateUser('+user.id+')') Actualizar
            button(type="button" onclick='deleteUser('+user.id+')') Eliminar
            button(type="button" onclick='eliminarUsuario('+user.id+', function(err, result) { console.log(result); })') Eliminar